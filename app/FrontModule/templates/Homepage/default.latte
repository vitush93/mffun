{block footScripts}
    {if $initPage}
    <script>
        var sl = new ScrollLoad('#content-load', '#loader-container', '#more-button', '#end-msg', 1000, 200, {!$initPage});
    </script>
    {/if}
    <script>
        keyboardShort();
    </script>
{/block}

{block full}
    {var $title = ''}
    {if $presenter->action == 'search'}
        {?
    $title = 'výsledky hledání pro \''.$presenter->getParameter('id').'\'';
    }
    {/if}
    {if isset($tag)}{? $title = '#'.$tag}{/if}
    {if isset($teacher)}
        {?
    $title = $asTag($teacher);
    }
    {/if}
    {if isset($subject)}
        {?
    $title = $asTag($subject);
    }
    {/if}
    {if $title}
        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-2"></div>
                <div class="col-lg-10">
                    <h1 id="page-title">{$title}</h1>
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
    {/if}
{/block}

{block content}
    <div id="content-load">
        {include 'loop.latte'}
    </div>
    {if $presenter->action != 'search'}
    <div id="loader-container">
        <div class="col-lg-2 visible-lg"></div>
        <div class="col-lg-10 col-md-12 col-sm-12 article-content">
            <div id="loader"><i class="fa fa-circle-o-notch fa-spin"></i></div>
        </div>
    </div>
    {/if}
    <div class="row" id="more-button">
        <div class="col-lg-2 visible-lg"></div>
        <div class="col-lg-10 col-md-12 col-sm-12 article-content">
            {if isset($tag)}
                <a href="{link Homepage:tag $tagId, p=>$more}" class="btn btn-primary btn-lg btn-block">zobrazit
                    další</a>
            {elseif isset($teacher)}
                <a href="{link Homepage:teacher $teacherId, p=>$more}" class="btn btn-primary btn-lg btn-block">zobrazit
                    další</a>
            {elseif isset($subject)}
                <a href="{link Homepage:subject $subjectId, p=>$more}" class="btn btn-primary btn-lg btn-block">zobrazit
                    další</a>
            {else}
                <a href="{link Homepage:page $more}" class="btn btn-primary btn-lg btn-block">zobrazit další</a>
            {/if}
        </div>
    </div>


    <div class="row" id="reload-button-content">
            <div class="col-lg-2 visible-lg"></div>
            <div class="col-lg-10 col-md-12 col-sm-12 article-content">
                <button class="btn btn-warning btn-lg btn-block" id="reload-button">zkusit znovu</button>
            </div>
    </div>
    <div class="row" id="end-msg">
        <div class="col-lg-2 visible-lg"></div>
        <div class="col-lg-10 col-md-12 col-sm-12 article-content">
            <p>víc už tu není :(</p>
        </div>
    </div>
{/block}